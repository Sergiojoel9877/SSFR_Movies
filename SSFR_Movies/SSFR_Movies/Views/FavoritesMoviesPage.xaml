<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SSFR_Movies.Views.FavoritesMoviesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:fftransformations="clr-namespace:FFImageLoading.Transformations;assembly=FFImageLoading.Transformations"
    BackgroundColor="#161513">

    <ContentPage.Resources>
        <ResourceDictionary Source="/ResourceDictionaries/GenResourceDictionary.xaml" />
    </ContentPage.Resources>

    <ContentPage.Content>
        <StackLayout>

            <ffimage:CachedImage
                x:Name="UnPin"
                Grid.ColumnSpan="2"
                BitmapOptimizations="True"
                DownsampleToViewSize="True"
                HeightRequest="300"
                HorizontalOptions="Center"
                Source="Unpin.png"
                WidthRequest="300" />

            <Label
                x:Name="Message"
                Margin="0,5,0,0"
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                HorizontalTextAlignment="Center"
                IsVisible="{Binding ListEmpty}"
                Text="You have not picked any movie as a favorite one"
                TextColor="White" />

            <ListView
                x:Name="MoviesList"
                Margin="0,20,0,0"
                CachingStrategy="RecycleElementAndDataTemplate"
                HasUnevenRows="True"
                ItemTapped="ItemSelected"
                ItemsSource="{Binding FavMoviesList, Mode=TwoWay}"
                RowHeight="350">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <ViewCell.ContextActions>

                                <MenuItem
                                    Clicked="AddToFavList"
                                    CommandParameter="{Binding .}"
                                    Icon="Star.png"
                                    Text="Add To Favorites" />

                            </ViewCell.ContextActions>
                            <FlexLayout
                                Margin="16"
                                AlignContent="Center"
                                Direction="Column">
                                <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand">
                                    <StackLayout
                                        Margin="16,0,16,0"
                                        HeightRequest="300"
                                        HorizontalOptions="FillAndExpand"
                                        VerticalOptions="FillAndExpand">
                                        <AbsoluteLayout
                                            AbsoluteLayout.LayoutBounds="0,0, 1,1"
                                            AbsoluteLayout.LayoutFlags="All"
                                            VerticalOptions="FillAndExpand">
                                            <ffimage:CachedImage
                                                AbsoluteLayout.LayoutBounds="0.5,0,1,1"
                                                AbsoluteLayout.LayoutFlags="All"
                                                BitmapOptimizations="True"
                                                DownsampleToViewSize="False"
                                                HeightRequest="300"
                                                HorizontalOptions="FillAndExpand"
                                                Scale="2"
                                                Source="{Binding PosterPath}"
                                                VerticalOptions="FillAndExpand"
                                                WidthRequest="300">
                                                <ffimage:CachedImage.Transformations>
                                                    <fftransformations:BlurredTransformation Radius="60" />
                                                </ffimage:CachedImage.Transformations>
                                            </ffimage:CachedImage>
                                            <ffimage:CachedImage
                                                AbsoluteLayout.LayoutBounds="0.5,0,1,1"
                                                AbsoluteLayout.LayoutFlags="All"
                                                BitmapOptimizations="True"
                                                DownsampleToViewSize="False"
                                                HeightRequest="300"
                                                HorizontalOptions="Center"
                                                Source="{Binding PosterPath}"
                                                Style="{StaticResource ImageInsideCardStyle}"
                                                WidthRequest="300" />
                                        </AbsoluteLayout>
                                    </StackLayout>
                                    <StackLayout>
                                        <Frame Style="{StaticResource StackUnderImageStyle}">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="3*" />
                                                    <ColumnDefinition Width="*" />
                                                </Grid.ColumnDefinitions>
                                                <Grid.RowDefinitions>
                                                    <RowDefinition Height="Auto" />
                                                    <RowDefinition Height="*" />
                                                </Grid.RowDefinitions>
                                                <ScrollView
                                                    x:Name="ScrollTitle"
                                                    Grid.Row="0"
                                                    Grid.Column="0"
                                                    HorizontalScrollBarVisibility="Never"
                                                    Orientation="Horizontal"
                                                    VerticalScrollBarVisibility="Never">
                                                    <Label Style="{StaticResource TitleStyle}" Text="{Binding Title}" />
                                                </ScrollView>
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="0"
                                                    Style="{StaticResource DateStyle}"
                                                    Text="{Binding ReleaseDate}" />
                                                <Image
                                                    x:Name="Pin"
                                                    Grid.Row="0"
                                                    Grid.Column="1"
                                                    Margin="0,0,16,0"
                                                    HeightRequest="34"
                                                    HorizontalOptions="End"
                                                    Source="Star.png"
                                                    WidthRequest="35" />
                                                <Label
                                                    Grid.Row="1"
                                                    Grid.Column="1"
                                                    Style="{StaticResource UnPinStyle}"
                                                    Text="Quit from Favorites" />
                                            </Grid>
                                        </Frame>
                                    </StackLayout>
                                </StackLayout>
                            </FlexLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
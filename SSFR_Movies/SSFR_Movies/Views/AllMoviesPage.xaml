<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="SSFR_Movies.Views.AllMoviesPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:ffimage="clr-namespace:FFImageLoading.Forms;assembly=FFImageLoading.Forms"
    xmlns:pages="clr-namespace:SSFR_Movies.Views"
    Title="SSFR Movies Home"
    BackgroundColor="#161513">

    <ContentPage.Content>
        <StackLayout>

            <FlexLayout Direction="Column">

                <Grid FlexLayout.AlignSelf="Start">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                    </Grid.RowDefinitions>

                    <ScrollView
                        x:Name="Scrollview"
                        Grid.Row="0"
                        Grid.Column="0"
                        Margin="16,15,16,0"
                        HeightRequest="40"
                        HorizontalScrollBarVisibility="Never">

                        <FlexLayout Direction="Row">
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Action">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Adventure">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Animation">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Comedy">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Crime">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Documentary">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Drama">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Family">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="History">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Horror">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Music">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Mystery">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Romance">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Science Fiction">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="TV Movie">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Thriller">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="War">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>
                            <Frame Style="{StaticResource FramesStyle}">

                                <Label Style="{StaticResource LabelsStyle}" Text="Western">
                                    <Label.GestureRecognizers>
                                        <TapGestureRecognizer Tapped="Genre_Tapped" />
                                    </Label.GestureRecognizers>
                                </Label>

                            </Frame>

                        </FlexLayout>

                    </ScrollView>

                    <Frame
                        x:Name="SearchFrame"
                        Grid.Row="1"
                        Grid.Column="0"
                        Style="{StaticResource SearchBarStyle}">

                        <FlexLayout Direction="Row" JustifyContent="SpaceBetween">
                            <Entry x:Name="SearchEntry" Style="{StaticResource EntrySearchBar}" />
                            <ffimage:CachedImage
                                x:Name="Search_Icon"
                                HeightRequest="40"
                                Source="Search.png"
                                VerticalOptions="Center"
                                WidthRequest="40">
                                <ffimage:CachedImage.GestureRecognizers>
                                    <TapGestureRecognizer Tapped="Search_Tapped" />
                                </ffimage:CachedImage.GestureRecognizers>
                            </ffimage:CachedImage>
                        </FlexLayout>

                    </Frame>
                </Grid>
            </FlexLayout>

            <ListView
                x:Name="MoviesList"
                CachingStrategy="RecycleElementAndDataTemplate"
                HasUnevenRows="True"
                IsVisible="{Binding ListVisible}"
                ItemAppearing="MoviesList_ItemAppearing"
                ItemTapped="ItemSelected"
                ItemsSource="{Binding AllMoviesList}"
                RowHeight="350">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <FlexLayout
                                Margin="16,0,16,0"
                                AlignContent="Center"
                                Direction="Column">
                                <ffimage:CachedImage
                                    Margin="16,0,16,0"
                                    BitmapOptimizations="True"
                                    DownsampleToViewSize="False"
                                    HeightRequest="300"
                                    HorizontalOptions="Center"
                                    Source="{Binding PosterPath}"
                                    Style="{StaticResource ImageInsideCardStyle}"
                                    WidthRequest="300" />
                                <StackLayout Style="{StaticResource StackUnderImageStyle}">
                                    <Grid>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition Width="3*" />
                                            <ColumnDefinition Width="*" />
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="*" />
                                        </Grid.RowDefinitions>
                                        <Label
                                            Grid.Row="0"
                                            Grid.Column="0"
                                            Style="{StaticResource TitleStyle}"
                                            Text="{Binding Title}" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="0"
                                            Style="{StaticResource DateStyle}"
                                            Text="{Binding ReleaseDate}" />
                                        <Image
                                            x:Name="Pin"
                                            Grid.Row="0"
                                            Grid.Column="1"
                                            Margin="0,0,16,0"
                                            HeightRequest="34"
                                            HorizontalOptions="End"
                                            Source="Pin.png"
                                            WidthRequest="35" />
                                        <Label
                                            Grid.Row="1"
                                            Grid.Column="1"
                                            Style="{StaticResource UnPinStyle}"
                                            Text="Add to Favorites" />
                                    </Grid>
                                </StackLayout>
                            </FlexLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

            <ActivityIndicator
                x:Name="activityIndicator"
                Margin="0,0,0,58"
                Color="#0088FF" />
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Name="Content"
    x:Class="SSFR_Movies.Views.SearchPage"
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:vm="clr-namespace:SSFR_Movies.ViewModels"
    xmlns:helpers="clr-namespace:SSFR_Movies.Helpers"
    x:DataType="vm:AllMoviesPageViewModel"
    BackgroundColor="#161513"
    NavigationPage.HasNavigationBar="False">

    <NavigationPage.TitleView>
        <StackLayout
            x:Name="Bar"
            BackgroundColor="#272B2E"
            HorizontalOptions="FillAndExpand"
            Orientation="Horizontal"
            VerticalOptions="Start">
            <SearchBar
                x:Name="searchBar"
                CancelButtonColor="White"
                FontAttributes="Bold"
                FontSize="Medium"
                HorizontalOptions="Center"
                Placeholder="Search"
                PlaceholderColor="#65FFFFFF"
                SearchButtonPressed="SearchBar_SearchButtonPressed"
                TextColor="White"
                VerticalOptions="FillAndExpand" />
        </StackLayout>
    </NavigationPage.TitleView>
        
    <ContentPage.Content>

        <StackLayout HorizontalOptions="FillAndExpand" VerticalOptions="FillAndExpand" CompressedLayout.IsHeadless="True" BackgroundColor="#161513">

            <ActivityIndicator
                x:Name="activityIndicator"
                BackgroundColor="Transparent"
                HeightRequest="40"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand"
                WidthRequest="40"
                Color="White" />

            <CollectionView x:Name="MoviesList" IsVisible="{Binding ListVisible}" Visual="Material" WidthRequest="{Binding Source={x:Reference Content}, Path= WidthRequest}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout CompressedLayout.IsHeadless="True">
                            <helpers:CustomViewCell HeightRequest="350" CompressedLayout.IsHeadless="True"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

